<Window x:Class="FaeneteS.Quejas.QuejasPresentadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaeneteS.Quejas"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="QuejasPresentadas" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="450" Width="700" Background="#FFFFFFFF" BorderBrush="Black" BorderThickness="2" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Border Background="Red" Grid.Row="0">
            <Label Content="Quejas Presentadas" HorizontalAlignment="Center" Foreground="#FFFFFFFF" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        <ToolBar Name="Toolbar" Height="64" Background="WhiteSmoke"  Grid.Row="1" FlowDirection="RightToLeft" >
            <Button Name="btnCloseFormQueja" ToolTip="Salir" Click="btnCloseFormQueja_Click">
                <Image Source="..\Img\shut_down.png" />
            </Button>
            <Button Name="btnEditQueja" ToolTip="Editar Queja" Click="btnEditQueja_Click">
                <Image Source="..\Img\edit.png" />
            </Button>
            <Button Name="btnDeleteQueja" ToolTip="Eliminar Queja" Click="btnDeleteQueja_Click">
                <Image Source="..\Img\remove.png" />
            </Button>
            
            <Button Name="btnAddQueja" ToolTip="Añadir Queja" Click="btnAddQueja_Click">
                <Image Source="..\Img/add.png" />
            </Button>
            
        </ToolBar>
        <GroupBox Header="FILTRAR POR" Margin="5" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <RadioButton x:Name="rbSinFiltro" GroupName="One" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0" Checked="rbSinFiltro_Checked" >Sin filtros</RadioButton>
                    <RadioButton x:Name="rbFecha" GroupName="One" IsChecked="False" VerticalAlignment="Center" Margin="0,0,10,0" Checked="rbFecha_Checked" >Fecha</RadioButton>
                    <RadioButton x:Name="rbNombre" GroupName="One" IsChecked="False" VerticalAlignment="Center" Margin="0,0,10,0" Checked="rbNombre_Checked" >Nombre</RadioButton>
                    <RadioButton x:Name="rbQueja" GroupName="One" IsChecked="False" VerticalAlignment="Center" Margin="0,0,10,0" Checked="rbQueja_Checked" >Queja</RadioButton>
                    <RadioButton x:Name="rbRegistro" GroupName="One" IsChecked="False" VerticalAlignment="Center" Margin="0,0,10,0" Checked="rbRegistro_Checked" >Registro</RadioButton>
                    <RadioButton x:Name="rbResolucion" GroupName="One" IsChecked="False" VerticalAlignment="Center" Checked="rbResolucion_Checked" >Resolución</RadioButton>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label x:Name="lblDesde" Content="Desde" IsEnabled="false"/>
                    <DatePicker x:Name="dtDesde" Width="140" HorizontalAlignment="Center" Margin="0,0,10,0" Height="24" VerticalAlignment="Center" IsEnabled="false" SelectedDate="{x:Static sys:DateTime.Now}"/>
                    <Label x:Name="lblHasta" Content="Hasta" IsEnabled="false"/>
                    <DatePicker x:Name="dtHasta" Width="140" HorizontalAlignment="Left" Margin="0,0,10,0" Height="24" IsEnabled="false" SelectedDate="{x:Static sys:DateTime.Now}"/>
                    <Button x:Name="btnOkFecha" Content="OK" Margin="0,0,10,0" Width="24" IsEnabled="false" Click="btnOkFecha_Click" />
                    <Label x:Name="lblTextoBuscar" Content="Texto a buscar" IsEnabled="false"/>
                    <TextBox x:Name="txtBuscar" Width="150" IsEnabled="false" PreviewTextInput="txtBuscar_PreviewTextInput" TextChanged="txtBuscar_TextChanged" VerticalContentAlignment="Center"  />
                </StackPanel>
            </Grid>
        </GroupBox>
        <DataGrid x:Name="dataGrid" Grid.Row="3" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="_id" Header="Id" Binding="{Binding Path=_id}" Width="SizeToCells"/>
                <DataGridTextColumn x:Name="fecha" Header="Fecha" Binding="{Binding Path=fecha,StringFormat=dd/MM/yyyy}" Width="SizeToCells"/>
                <DataGridTextColumn x:Name="nombre" Header="Nombre" Binding="{Binding Path=nombre}" Width="SizeToCells"/>
                <DataGridTextColumn x:Name="queja" Header="Queja" Binding="{Binding Path=queja}" Width="SizeToCells"/>
                <DataGridTextColumn x:Name="registro" Header="Registro" Binding="{Binding Path=registro}" Width="SizeToCells"/>
                <DataGridTextColumn x:Name="resolucion" Header="Resolución" Binding="{Binding Path=resolucion}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Row="3" />
    </Grid>
</Window>
